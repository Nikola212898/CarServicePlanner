@model CarServicePlanner.Models.Car

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-3">Add new car</h2>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Mileage" class="form-label"></label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RegistrationNumber" class="form-label"></label>
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Vin" class="form-label"></label>
                        <input asp-for="Vin" class="form-control" />
                        <span asp-validation-for="Vin" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NextServiceData" class="form-label"></label>
                        <input asp-for="NextServiceData"
                               class="form-control"
                               type="date"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="NextServiceData" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
