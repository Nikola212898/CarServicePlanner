@model IEnumerable<CarServicePlanner.Models.Car>

@{
    ViewData["Title"] = "Upcoming services";
    var today = DateTime.Today;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Upcoming services</h2>
            <small class="text-muted">Cars with scheduled service dates in the future</small>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title mb-3">No upcoming services</h5>
                <p class="card-text text-muted">
                    There are currently no cars with a planned next service date in the future.
                </p>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Back to cars
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Car</th>
                            <th>Registration</th>
                            <th>Next service date</th>
                            <th>Days left</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var daysLeft = (item.NextServiceData!.Value.Date - today).Days;

                            <tr>
                                <td>@item.Brand @item.Model (@item.Year)</td>
                                <td>@item.RegistrationNumber</td>
                                <td>@item.NextServiceData!.Value.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (daysLeft == 0)
                                    {
                                        <span class="text-danger fw-semibold">Today</span>
                                    }
                                    else if (daysLeft == 1)
                                    {
                                        <span class="text-warning fw-semibold">1 day</span>
                                    }
                                    else
                                    {
                                        <span>@daysLeft days</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
