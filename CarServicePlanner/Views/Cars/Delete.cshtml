@model CarServicePlanner.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-3 text-danger">Delete car</h2>
            <hr />

            <p class="text-danger">Are you sure you want to delete this car? This action cannot be undone.</p>

            <dl class="row mb-3">
                <dt class="col-sm-3">Brand</dt>
                <dd class="col-sm-9">@Model.Brand</dd>

                <dt class="col-sm-3">Model</dt>
                <dd class="col-sm-9">@Model.Model</dd>

                <dt class="col-sm-3">Year</dt>
                <dd class="col-sm-9">@Model.Year</dd>

                <dt class="col-sm-3">Registration</dt>
                <dd class="col-sm-9">@Model.RegistrationNumber</dd>

                <dt class="col-sm-3">Mileage</dt>
                <dd class="col-sm-9">@Model.Mileage.ToString("N0") km</dd>

                <dt class="col-sm-3">VIN</dt>
                <dd class="col-sm-9">@Model.Vin</dd>

                <dt class="col-sm-3">Next service date</dt>
                <dd class="col-sm-9">
                    @if (Model.NextServiceData.HasValue)
                    {
                        @Model.NextServiceData.Value.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        <span class="text-muted">Not set</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
