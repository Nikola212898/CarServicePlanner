@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="mb-4">
        <h2 class="mb-0">Dashboard</h2>
        <small class="text-muted">Quick access to all system features</small>
    </div>

    <div class="row g-3">

        <!-- Cars -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Cars</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Manage your vehicles, mileage and next service dates.
                    </p>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-primary btn-sm mt-auto">
                        Go to cars
                    </a>
                </div>
            </div>
        </div>

        <!-- Upcoming services -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Upcoming services</h5>
                    <p class="card-text text-muted flex-grow-1">
                        See which cars have service scheduled soon.
                    </p>
                    <a asp-controller="Cars" asp-action="Upcoming" class="btn btn-outline-primary btn-sm mt-auto">
                        View upcoming services
                    </a>
                </div>
            </div>
        </div>

        <!-- Service history -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Service history</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Open any car and check recorded service history.
                    </p>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-secondary btn-sm mt-auto">
                        Open car list
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
