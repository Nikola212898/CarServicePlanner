@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-4">
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Cars</h5>
                    <p class="card-text text-muted">
                        Manage your vehicles, mileage and next service dates.
                    </p>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-primary btn-sm">
                        Go to cars
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Upcoming services</h5>
                    <p class="card-text text-muted">
                        See which cars have service scheduled soon.
                    </p>
                    <a asp-controller="Cars" asp-action="Upcoming" class="btn btn-outline-primary btn-sm">
                        View upcoming services
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Service history</h5>
                    <p class="card-text text-muted">
                        Open any car and check recorded service history.
                    </p>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Open car list
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
