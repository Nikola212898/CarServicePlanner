@model CarServicePlanner.Models.ServiceRecord

@{
    ViewData["Title"] = "Delete service";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-3 text-danger">Delete service record</h2>
            <hr />

            <p class="text-danger">
                Are you sure you want to delete this service record? This action cannot be undone.
            </p>

            <dl class="row mb-3">
                <dt class="col-sm-3 fw-semibold">Car</dt>
                <dd class="col-sm-9">
                    @Model.Car!.Brand @Model.Car.Model (@Model.Car.Year)
                </dd>

                <dt class="col-sm-3 fw-semibold">Service date</dt>
                <dd class="col-sm-9">
                    @Model.ServiceDate.ToString("dd.MM.yyyy")
                </dd>

                <dt class="col-sm-3 fw-semibold">Service type</dt>
                <dd class="col-sm-9">
                    @Model.ServiceType
                </dd>

                <dt class="col-sm-3 fw-semibold">Mileage at service</dt>
                <dd class="col-sm-9">
                    @(Model.MileageAtService?.ToString("N0") ?? "-") km
                </dd>

                <dt class="col-sm-3 fw-semibold">Cost</dt>
                <dd class="col-sm-9">
                    @(Model.Cost.HasValue ? Model.Cost.Value.ToString("0.00") + " €" : "-")
                </dd>

                <dt class="col-sm-3 fw-semibold">Notes</dt>
                <dd class="col-sm-9">
                    @Model.Notes
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
